# Lista de diccionarios con varias personas
personas = [
    {
        "nombre": "Laura P√©rez",
        "edad": 29,
        "ciudad": "Quito",
        "profesion": "Ingeniera Civil"
    },
    {
        "nombre": "Carlos G√≥mez",
        "edad": 35,
        "ciudad": "Cuenca",
        "profesion": "Abogado"
    },
    {
        "nombre": "Mariana Torres",
        "edad": 41,
        "ciudad": "Guayaquil",
        "profesion": "Doctora"
    },
    {
        "nombre": "Andr√©s S√°nchez",
        "edad": 27,
        "ciudad": "Loja",
        "profesion": "Profesor"
    },
    {
        "nombre": "Sof√≠a Ram√≠rez",
        "edad": 32,
        "ciudad": "Ambato",
        "profesion": "Arquitecta"
    }
]

# === OPERACIONES SOBRE CADA PERSONA ===
for persona in personas:
    persona["ciudad"] = "Guayaquil"       # Cambiar ciudad
    persona["cargo"] = "Empleado"         # Agregar nuevo campo
    if "telefono" not in persona:         # Verificar telefono
        persona["telefono"] = "0999999999"
    if "edad" in persona:                 # Eliminar edad
        del persona["edad"]

# === FUNCI√ìN PARA MOSTRAR PERSONA INDIVIDUAL ===
def mostrar_persona(numero):
    if 1 <= numero <= len(personas):
        persona = personas[numero - 1]  # -1 porque lista empieza en 0
        print(f"\n=== Persona {numero} ===")
        for clave, valor in persona.items():
            print(f"{clave.capitalize()}: {valor}")
    else:
        print("‚ö†Ô∏è N√∫mero inv√°lido. Solo hay 5 personas.")

# === BUCLE INTERACTIVO ===
while True:
    opcion = input("\nEscribe 'persona 1', 'persona 2', ..., o 'salir' para terminar: ").lower()

    if opcion == "salir":
        print("üëã Programa finalizado. ¬°Hasta luego!")
        break

    if opcion.startswith("persona"):
        try:
            num = int(opcion.split()[1])  # tomar el n√∫mero despu√©s de la palabra
            mostrar_persona(num)
        except:
            print("‚ùå Formato inv√°lido. Debes escribir: persona + n√∫mero (ej: persona 3).")
    else:
        print("‚ùå Entrada no reconocida. Usa 'persona n√∫mero' o 'salir'.")
